<?xml version="1.0" encoding="UTF-8"?>
<odoo>


       <record id="view_create_special_process_size_price" model="ir.ui.view">
          <field name="name">create.special.process.size.price.form</field>
          <field name="model">create.special.process.size.price</field>
          <field name="arch" type="xml">
            <form string="Create Size Fee of Special Process"  version="7.0">
                <h1>
                    <label string="Target Special Process:"/>
                    <field name="special_process_id" class="oe_inline" attrs="{'readonly':True}"/>
                </h1>            

                <group>
                    <field name="source_special_process_id" />
                </group>
                

                <group col="4">
                    <label for="min_fee"/>
                    <div>
                        <field name="min_fee" /> 
                        <field name="min_fee_type" /> 
                    </div>
                    <label for="min_change_fee"/>
                    <div>
                        <field name="min_fee_compute" class="oe_inline"/>
                        <field name="min_change_fee" class="oe_inline"/>
                        <field name="min_fee_class" class="oe_inline"/>
                    </div>
                </group>

                <group >
                    <field name="limit_size" />
                </group>

                <group col="4">
                    <label for="max_fee"/>
                    <div>
                        <field name="max_fee" /> 
                        <field name="max_fee_type" /> 
                    </div>
                    <label for="max_change_fee"/>
                    <div>
                        <field name="max_fee_compute" class="oe_inline"/>
                        <field name="max_change_fee" class="oe_inline"/>
                        <field name="max_fee_class" class="oe_inline"/>
                    </div>
                </group>
                
                <footer>
                    <button name="create_special_process_size" string="Create Special Process Size" type="object" class="oe_highlight"/>
                    <label string="or" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
          </field>
       </record>
              

        <act_window
            context="{'default_special_process_id': active_id}"
            id="act_create_special_process_size_price"
            name="Create Size Fee of Special Process"
            view_mode="form" target="new"
            res_model="create.special.process.size.price"
            src_model="cam.special.process" 
            view_id="view_create_special_process_size_price"/>


</odoo>